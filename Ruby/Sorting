#descending sort
def alphabetize(arr, rev=false)
    if i>j
      return -1
  elsif i<j
      return 1
  else 
      return 0
  end
end

numbers = [1, 2, 3, 4]
puts alphabetize.numbers

#ascending and descending sort
def alphabetize(arr, rev=false)
     if rev
        arr.reverse!
    else
        arr.sort!
  end
end
numbers = [1, 2, 3, 4]
puts(alphabetize(numbers))
