movies = {
    movie1: 5,
    movie2: 4, 
    movie2: 3, 
    movie4: 4,
    
}

puts "Add, update, display, or delete movie title? "
choice = gets.chomp

case choice
    when "add"
        puts "Enter a movie title: "
        title = gets.chomp
        puts "Enter movie rating (0-5): "
        rating = gets.chomp
            if movies[title.to_sym] = nil
                movies[title.to_sym] = rating.to_i
                puts "#{title} has been added with a rating of #{rating}"
            else
                puts "#{title} already exists and #{title} not added"
            end
    when "update"
        puts "Updated!"
    when "display"
        puts "Movies!"
    when "delete"
        puts "Deleted!"
    else
        puts "Error!"
end
