movies = {
    Pineapple_express: 5,
    Inglorious_bastards: 4, 
    This_is_the_end: 3, 
    Old_School: 4,
    
}

puts "Add, update, display, or delete movie title? "
choice = gets.chomp

case choice

#add movie
    when "add"
        puts "Enter a movie title: "
        title = gets.chomp
        puts "Enter movie rating (0-5): "
        rating = gets.chomp
            if movies[title.to_sym] = nil
                movies[title.to_sym] = rating.to_i
                puts "#{title} has been added with a rating of #{rating}"
            else
                puts "#{title} already exists and #{title} not added"
            end
            
#update movie
    when "update"
        puts "Enter title to update record: "
        tile = gets.chomp
            if movies[title.to_sym] = nil
                puts "Error: Title is non-existent"
            else
                puts "Please enter new rating: "
                rating = gets.chomp
                movies[title.to_sym] = rating.to_i
end
                
#display movie
    when "display"
        movies.each do |movie, rating| puts "#{movie}: #{rating}", " "
    end
        
#delete movie
    when "delete"
        puts "Enter title to delete: "
        title = gets.chomp
            if movies[title.to_sym] = nil
                puts "Error: Title is non-existent"
            else
                movies.delete(title.to_sym)
                puts "#{title} has been removed"
            end
#error handler
    else
        puts "Error!"
end
