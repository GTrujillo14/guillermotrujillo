import os, shutil

src_dir = 'source directory' 
dst_dir = 'destination directory' 

for src_dir, dirs, files in os.walk(src_dir):
    dst_dir = src_dir.replace(src_dir, dst_dir, 1)
#if file does not exists in destination folder, create it    
    if not os.path.exists(dst_dir): 
        os.makedirs(dst_dir)
#if file exists in destination folder remove and replace with source file        
    for file_ in files:
        src_file = os.path.join(src_dir, file_)
        dst_file = os.path.join(dst_dir, file_)
        if os.path.exists(dst_file):
            os.remove(dst_file)
        shutil.move(src_file, dst_dir)
